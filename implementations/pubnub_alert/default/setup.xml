<setup>
    <block title="Pubnub Alerts">
        <text>Configure Pubnub Alerting</text>
    </block>
    
    <block title="Activation Key" endpoint="admin/alert_actions" entity="pubnub">
        <text>Visit &lt;a href="http://www.baboonbones.com/#activation" target="_blank"&gt;http://www.baboonbones.com/#activation&lt;/a&gt; to obtain a non-expiring key</text>
        
        <input field="param.activationkey">
            <label>Activation Key</label>
            <type>text</type> 
        </input>  

                
    </block>

    <block title="Publish Settings" endpoint="admin/alert_actions" entity="pubnub">
        <input field="param.pubkey">
            <label>Publish Key</label>
            <type>text</type>
        </input>
        <input field="param.subkey">
            <label>Subscribe Key</label>
            <type>text</type>
        </input>
        
        
    </block>

</setup>